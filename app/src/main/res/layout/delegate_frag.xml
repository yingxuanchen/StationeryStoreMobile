<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/delegate_mainhead"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/linearApprove_hori">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delegation"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delegate_startcontainer"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        style="@style/linearApprove_hori"
        app:layout_constraintTop_toBottomOf="@+id/delegate_mainhead"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/delegate_startlabel"
            style="@style/Labels"
            android:textColor="@color/black"
            android:text="@string/startD"></TextView>

        <EditText
            android:id="@+id/start_datepicker"
            android:layout_width="210dp"
            android:background="@drawable/editextstyle"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/start_datepickerBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cal_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delegate_endcontainer"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        style="@style/linearApprove_hori"
        app:layout_constraintTop_toBottomOf="@+id/delegate_startcontainer"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/delegate_endlabel"
            style="@style/Labels"
            android:textColor="@color/black"
            android:text="@string/endD"></TextView>

        <EditText
            android:id="@+id/end_datepicker"
            android:background="@drawable/editextstyle"
            android:textSize="20dp"
            android:layout_width="210dp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/end_datepickerBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cal_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delegate_selEmp"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        style="@style/linearApprove_hori"
        app:layout_constraintTop_toBottomOf="@+id/delegate_endcontainer"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/delegate_selEmpLabel"
            style="@style/Labels"
            android:textColor="@color/black"
            android:text="@string/Emp"></TextView>

        <EditText
            android:id="@+id/delegate_selEmp_input"
            android:background="@drawable/editextstyle"
            android:textSize="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/delegate_empListBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delegate_confirmContnr"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"
        style="@style/linearApprove_hori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:padding="20dp"
            android:layout_margin="20dp"
            android:id="@+id/delegate_confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/confirmDelg"
            android:textAlignment="center" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>