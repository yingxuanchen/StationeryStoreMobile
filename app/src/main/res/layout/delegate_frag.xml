<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/del_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:text="Delegation"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/linear_del">

            <TextView
                style="@style/Labels"
                android:text="@string/startD"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/start_date_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/editextstyle"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/start_date_picker_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cal_24" />

        </LinearLayout>

        <LinearLayout
            style="@style/linear_del">

            <TextView
                style="@style/Labels"
                android:text="@string/endD"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/end_date_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/editextstyle"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/end_date_picker_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cal_24" />

        </LinearLayout>

        <LinearLayout
            style="@style/linear_del">

            <TextView
                style="@style/Labels"
                android:text="@string/Emp"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/del_emp_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/del_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="@string/confirmDel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>