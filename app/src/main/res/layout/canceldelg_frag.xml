<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/delg_headcontnr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:paddingTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/delegate_headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delegation"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/delg_headcontnr">

        <TableLayout
            android:id="@+id/retrieve_delginfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/canceldelg_colm1" />

                <TextView android:id="@+id/canceldelg_colm2" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/delegate_confirmContnr"
        android:paddingTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"
        style="@style/linearApprove_hori"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:padding="20dp"
            android:layout_margin="20dp"
            android:id="@+id/delegate_confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cancelDelg"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>