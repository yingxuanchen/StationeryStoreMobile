<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="100dp"
            android:id="@+id/assignRepContnr"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/linearApprove_hori">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assignRep"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nowrep_contnr"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="15dp"
            style="@style/linearApprove_hori"
            app:layout_constraintTop_toBottomOf="@+id/assignRepContnr"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/nowrep_label"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="@string/nowRep"></TextView>

            <EditText
                android:id="@+id/nowrep_edtxt"
                android:background="@drawable/editextstyle"
                android:textSize="14dp"
                android:minWidth="120dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/nowrep_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newrep_contnr"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="15dp"
            style="@style/linearApprove_hori"
            app:layout_constraintTop_toBottomOf="@+id/nowrep_contnr"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/newrep_label"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="@string/newRep"></TextView>

            <EditText
                android:id="@+id/newrep_edtxt"
                android:background="@drawable/editextstyle"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:minWidth="120dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/newrep_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chgrep_btncontnr"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            style="@style/linearApprove_hori"
            app:layout_constraintTop_toBottomOf="@id/newrep_contnr"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:padding="20dp"
                android:layout_margin="20dp"
                android:id="@+id/chgrep_savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/save"
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>