<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/del_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="30dp"
            android:text="Delegation"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout style="@style/linear_del">

            <TextView
                style="@style/del_text"
                android:layout_weight="1"
                android:text="@string/start_date" />

            <TextView
                android:id="@+id/start_date"
                style="@style/del_text"
                android:layout_weight="1.5"
                tools:text="12/07/2019" />

        </LinearLayout>

        <LinearLayout style="@style/linear_del">

            <TextView
                style="@style/del_text"
                android:layout_weight="1"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/end_date"
                style="@style/del_text"
                android:layout_weight="1.5"
                tools:text="12/07/2019" />

        </LinearLayout>

        <LinearLayout style="@style/linear_del">

            <TextView
                style="@style/del_text"
                android:layout_weight="1"
                android:text="@string/emp" />

            <TextView
                android:id="@+id/emp"
                style="@style/del_text"
                android:layout_weight="1.5"
                tools:text="Tan Ah Kow" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/del_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="@string/del_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>