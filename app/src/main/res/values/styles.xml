<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="linearCenter">
        <item name="android:weightSum">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- for approval screen -->
    <style name="linearApprove_hori">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ApproveTV">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ApproveTS">
        <item name="android:layout_weight">3</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- for delegate screen -->
    <style name="del_text">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="linear_del">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">30dp</item>
    </style>

    <!--Retrieval Form and Adjustment Items table header-->
    <style name="retrieval">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Adjustment Index and Details-->
    <style name="adj_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="adj_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="adj_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
    </style>

</resources>
